---
import '@fontsource/roboto-slab';
import NavItem from '../NavItem/index.astro';
import { navItems } from '@/data/navigation';
import CopyrightNotice from '../CopyrightNotice/index.astro';
---

<footer
  class="from-custom1/95 to-custom2/95 flex min-h-screen items-center border-t bg-linear-to-br bg-fixed p-12 lg:px-4 lg:pt-6 lg:pb-8"
>
  <div
    class="mx-auto grid w-full max-w-5xl grid-cols-1 py-6 xl:max-w-6xl 2xl:max-w-7xl"
  >
    <div class="lg:flex lg:items-center lg:justify-between">
      <section
        class="text-muted-foreground flex flex-col items-center justify-center text-center leading-loose lg:items-start"
        aria-labelledby="footer-title"
      >
        <a
          href="/"
          aria-label="ホームページ"
          class="text-background hover:text-input dark:hover:text-muted mb-2.5 text-4xl font-normal lg:text-4xl"
        >
          <span class="font-roboto-slab">HaikuMonument API</span>
        </a>
        <p class="text-muted text-sm">句碑の情報を提供するAPI</p>
        <div class="hidden lg:block">
          <CopyrightNotice />
        </div>
      </section>

      <nav
        aria-label="Footer Navigation"
        class="my-16 flex-1 lg:my-0 lg:ml-16 xl:ml-32 2xl:ml-48"
      >
        <ul
          class="w-full flex-nowrap items-center justify-center gap-3 space-y-3 whitespace-nowrap sm:flex sm:flex-row sm:gap-8 sm:space-y-0 lg:my-32 lg:justify-between"
        >
          {
            navItems.map((item) => (
              <li>
                <NavItem
                  title={item.title}
                  label={item.label}
                  href={item.href}
                />
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <div class="mt-8 block flex-none lg:mt-0 lg:hidden">
      <CopyrightNotice />
    </div>
  </div>
</footer>
