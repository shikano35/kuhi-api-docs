---
const { title, label, href } = Astro.props;
const currentHash = new URL(Astro.request.url).hash || '#overview';
const isActive = currentHash === href;
---

<a
  href={href}
  title={title}
  aria-current={isActive ? 'page' : undefined}
  class={[
    'inline-block',
    'p-1',
    'rounded',
    'transition-colors',
    'duration-200',
    isActive ? 'text-blue-500' : 'text-gray-500 hover:text-blue-500',
  ].join(' ')}
>
  <span class="text-md sm:text-sm md:text-base">{label}</span>
</a>
