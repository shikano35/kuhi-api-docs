---
import NavItem from '../NavItem/index.astro';
import { Button } from '../ui/button';

export const navItems = [
  { title: 'Top', label: 'トップ', href: '/' },
  { title: 'Home', label: '概要', href: '#overview' },
  { title: 'API Reference', label: 'APIリファレンス', href: '#reference' },
  { title: 'Changelog', label: '変更履歴', href: '#changelog' },
];
---

<nav
  aria-label="Main Navigation"
  class="sticky top-0 mt-2 flex justify-between border-b border-gray-200 bg-white sm:py-1"
>
  <ul
    class="m-0 ml-0 flex list-none items-center gap-1 p-0 sm:ml-4 sm:gap-2 lg:gap-4"
  >
    {
      navItems.map((item) => (
        <li>
          <NavItem {...item} />
        </li>
      ))
    }
  </ul>
  <Button />
</nav>
