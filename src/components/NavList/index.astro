---
import NavItem from '../NavItem/index.astro';

export const navItems = [
  { title: 'Top', label: 'トップ', href: '/' },
  { title: 'Home', label: '概要', href: '#overview' },
  { title: 'API Reference', label: 'APIリファレンス', href: '#reference' },
  { title: 'Changelog', label: '変更履歴', href: '#changelog' },
];

interface Props {
  hideTop?: boolean;
}

const { hideTop = false } = Astro.props as Props;

const itemsToRender = hideTop
  ? navItems.filter((item) => item.title !== 'Top')
  : navItems;
---

<nav
  aria-label="Main Navigation"
  class="border-sm:py-1 hidden justify-between md:block"
>
  <ul class="flex list-none items-center gap-1 p-0 sm:ml-4 sm:gap-2 lg:gap-4">
    {
      itemsToRender.map((item) => (
        <li>
          <NavItem {...item} />
        </li>
      ))
    }
  </ul>
</nav>
