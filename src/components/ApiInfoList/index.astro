---
import {
  BookOpenIcon,
  CalendarIcon,
  ChatBubbleBottomCenterTextIcon,
  DocumentTextIcon,
  MapPinIcon,
  PhotoIcon,
  UserIcon,
} from '@heroicons/react/24/outline';
import { Card } from '../ui/card';

export const apiInfoItems = [
  { icon: BookOpenIcon, label: '俳句' },
  { icon: UserIcon, label: '俳人' },
  { icon: MapPinIcon, label: '場所' },
  { icon: DocumentTextIcon, label: '出典' },
  { icon: CalendarIcon, label: '建立年' },
  { icon: PhotoIcon, label: '画像' },
  { icon: ChatBubbleBottomCenterTextIcon, label: '解説' },
];
---

<ul
  class="text-background absolute top-5/12 grid grid-cols-4 gap-8 p-4 text-sm font-semibold sm:text-xl md:gap-14 lg:text-2xl"
  aria-label="提供情報リスト"
>
  {
    apiInfoItems.map((item) => (
      <li>
        <Card className="p-2 sm:p-4 shadow-md">
          <div class="flex h-full items-center justify-center">
            <item.icon className="mr-2 h-6 w-6" />
            <p>{item.label}</p>
          </div>
        </Card>
      </li>
    ))
  }
</ul>
