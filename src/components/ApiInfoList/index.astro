---
import {
  BookOpenIcon,
  CalendarIcon,
  ChatBubbleBottomCenterTextIcon,
  ClockIcon,
  CubeIcon,
  DocumentTextIcon,
  MapPinIcon,
  PhotoIcon,
  UserIcon,
  PencilSquareIcon,
  TagIcon,
} from '@heroicons/react/24/outline';
import { Card } from '../ui/card';

export const apiInfoItems = [
  { icon: BookOpenIcon, label: '句碑' },
  { icon: PencilSquareIcon, label: '碑文' },
  { icon: ChatBubbleBottomCenterTextIcon, label: '俳句' },
  { icon: UserIcon, label: '俳人' },
  { icon: MapPinIcon, label: '場所' },
  { icon: DocumentTextIcon, label: '出典' },
  { icon: CalendarIcon, label: '建立日' },
  { icon: PhotoIcon, label: 'メディア' },
  { icon: TagIcon, label: '季語' },
  { icon: ClockIcon, label: '季節' },
  { icon: CubeIcon, label: '材質' },
];
---

<ul
  class="text-background absolute top-[37.5%] grid grid-cols-3 gap-8 p-4 text-sm font-semibold sm:grid-cols-4 sm:gap-4 sm:gap-y-10 sm:text-xl md:gap-10 lg:text-2xl"
  aria-label="提供情報リスト"
>
  {
    apiInfoItems.map((item) => (
      <li>
        <Card className="p-2.5 md:p-3 xl:p-3.5 shadow-md">
          <div class="flex h-full items-center justify-center">
            <item.icon className="mr-2 h-5 w-6 sm:h-6 sm:w-6" />
            <p>{item.label}</p>
          </div>
        </Card>
      </li>
    ))
  }
</ul>
