---
export type ChangelogEntry = {
  id: string;
  date: string;
  description: string;
};

const changelogEntries: ChangelogEntry[] = [
  {
    id: 'entry-2',
    date: '2025-04-28',
    description: '句碑APIドキュメントのレイアウトを調整しました',
  },
  {
    id: 'entry-1',
    date: '2025-02-22',
    description: 'APIの提供を開始しました',
  },
];
---

<ul class="mx-auto mt-8 w-full list-none p-0 md:mt-0">
  {
    changelogEntries.map((entry) => (
      <li class="border-border flex w-full items-baseline border-b py-4 last:border-0">
        <time class="text-muted-foreground mr-4" datetime={entry.date}>
          {entry.date}
        </time>
        <p class="text-muted-foreground text-[0.95rem] leading-loose md:text-base">
          {entry.description}
        </p>
      </li>
    ))
  }
</ul>
